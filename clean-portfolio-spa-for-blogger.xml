    <script type='text/javascript'>
//Set tabWidth
      
      let buttonCollection = document.querySelectorAll(&quot;.nameBtn&quot;);
      let boxCollection = document.querySelectorAll(&quot;.boxClass&quot;);
      let footerCollection = document.querySelectorAll(&quot;.footerBtn&quot;);

      let tabWidth = 100 / buttonCollection.length;

    let footerTabWidth = 100 / footerCollection.length;

    footerCollection.forEach((item) =&gt; {
      item.style.width = footerTabWidth + &quot;%&quot;;
    });
      
// init welcome page
      
      document.onload = init();
      
      function init() {
        selectedBox = &quot;welcome&quot;;
        showChosen();
      }

      buttonCollection.forEach((item) =&gt; {
        item.onclick = function (e) {

          selectedBox = e.target.name;

          item.nextElementSibling.classList.add("active");

          buttonCollection.forEach((item) =&gt; {
          if(item.getAttribute(&quot;name&quot;) !== selectedBox){
            item.nextElementSibling.classList.remove("active");
            }
          });

       showChosen();
        };
      });

        function showChosen() {

          boxCollection.forEach((item) =&gt; {

                    if (item.getAttribute(&quot;name&quot;) !== selectedBox) {
                      item.style.display = &quot;none&quot;;
                      item.classList.remove(&quot;infocus&quot;);
                    } else {
                      item.style.display = &quot;block&quot;;
                      setTimeout(() =&gt; {
                        item.classList.add(&quot;infocus&quot;);
                   
                      }, 100);
                    }
                  });
        }

    </script>
