    <style>
      body {
        font-family: sans-serif;
      }

      * {
          box-sizing: border-box;
      }
      
      /*hide blogger Form Title*/
      #ContactForm1 h3 {
      display:none;
      }

      #spaTabsContainer {
        max-width: 600px;
        margin: 20px auto 0 auto;
        position: relative;
      }

      .landingZone {
        background-color: blueviolet;
        color: white;
        text-align: center;
        height: 80hv;
        display: flex;
        justify-content: center;
      }

      .pageBrand {
        margin: 20px 0 20px 20px;
      }

      p {
        margin: 0;
      }

      nav h3 {
        margin: 0;
        align-self: center;
      }

      .boxClass {
        min-height: 350px;
        width: 100%;
        margin: 20px auto 20px auto;
        text-align: center;
        transition: all;
        opacity: 0;
        transition-duration: 1s;
      }

      .boxClass.infocus {
        opacity: 1;
      }

      .categoryTitle {
        width: 60%;
        margin: 20px auto 10px auto;
      }

      .categoryText {
      width:80%;
      margin: 0 auto 25px auto;
      line-height: 20px;
      text-align: justify;
      }
      
      .formText {
      width:80%;
      margin:20px auto 0 auto;
      }
      
      .formText input,
      .formText textarea {
      margin: 10px 0 10px 0;
      }
      
      a {
      text-decoration: none;
      }

      .linkBar {
        margin: 10px auto 0 auto;
        width: 60%;
        height: 50px;
        display: flex;
        justify-content: center;
        background-color: white;
        color: black;
        border: 1px solid white;
        border-bottom: 1px solid grey;
      }

      .linkBar:hover {
        background-color: lightgrey;
        color: white;
        border: 1px solid lightgrey;
      }

      .appLink {
        align-self: center;
      }
      .nameBtnHolder, .footerBtn {
        float: left;
        background-color: white;
        font-size: 16px;
        text-align:center;
        cursor: pointer;
        height:42px;
      }

      .nameBtnHolder{
        border: solid 1px grey;
        width:25%;
      }

      .nameBtn {
        width:100%;
        height:35px;
        line-height: 38px;
        background-color: white;
        border: none;
        font-size: 16px;
        cursor: pointer;
      }
      
      @media screen and (max-width:400px) {
      .nameBtnHolder{
        border: solid 1px grey;
        width:50%;
        margin-bottom:2px;
      }
      }

       .highlight {
          height:5px;
      }

      .nameBtn:hover + .highlight {
        background-color:lightgrey;
      }

      .active {
        background-color:lightgrey;
      }

      .footerBtn {
       border: none;
      }

      footer {
        border-top: 1px solid grey;
        height: 40px;
      }

      .clearFloat::after {
        content: &quot;&quot;;
        clear: both;
        display: table;
      }
      
      #copyrightNotice {
      text-align: center;
      font-size:14px;
      margin:20px 0 0 0;
      }
      
    </style>
  </head>

  <body>
